<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.brolly.diary.domain.DiaryEntry" table="diary_entry">
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="date" column="entry_date" type="timestamp" />
		<property name="tags" column="tags" type="string" />
		<property name="text" column="entry_text" type="string" />
		
	</class>
</hibernate-mapping>